    <Button
        style="@style/Widget.Material3.Button.ElevatedButton.Icon"
        android:id="@+id/btn_add_floor"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_baseline_add_24"
        android:text="층"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btn_add_line"
        app:layout_constraintVertical_chainStyle="packed" />

     <Button
         style="@style/Widget.Material3.Button.ElevatedButton.Icon"
         android:id="@+id/btn_add_line"
         android:layout_width="110dp"
         android:layout_height="wrap_content"
         app:icon="@drawable/ic_line"
         android:text="라인"
         app:layout_constraintBottom_toTopOf="@+id/btn_add_ho"
         app:layout_constraintStart_toStartOf="@+id/btn_area" />

    <Button
        style="@style/Widget.Material3.Button.ElevatedButton.Icon"
        android:id="@+id/btn_add_ho"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_build"
        android:text="호"
        app:layout_constraintBottom_toTopOf="@+id/btn_reset"
        app:layout_constraintStart_toStartOf="@+id/btn_reset" />

    <Button
        style="@style/Widget.Material3.Button.ElevatedButton.Icon"
        android:id="@+id/btn_reset"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        app:icon="@drawable/ic_remove"
        android:text="초기화"
        app:layout_constraintBottom_toTopOf="@+id/btn_area"
        app:layout_constraintStart_toStartOf="@+id/btn_area" />

    <Button
        style="@style/Widget.Material3.Button.ElevatedButton.Icon"
        android:id="@+id/btn_area"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="그룹"
        app:icon="@drawable/ic_group"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/btn_reset" />

<!--    </androidx.constraintlayout.widget.ConstraintLayout>-->

</merge>

