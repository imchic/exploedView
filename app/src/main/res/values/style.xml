<?xml version="1.0" encoding="utf-8"?>
<resources>

     <!-- Material AlertDialog Custom Design -->
    <style name="Widget.AlertDialog.Theme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="alertDialogStyle">@style/MaterialAlertDialog.App</item>
        <item name="materialAlertDialogTitlePanelStyle">@style/MaterialAlertDialog.MaterialComponents.Title.Panel2</item>
        <item name="materialAlertDialogTitleIconStyle">@style/MaterialAlertDialog.App.Title.Icon</item>
        <item name="materialAlertDialogTitleTextStyle">@style/MaterialAlertDialog.App.Title.Text</item>
        <item name="materialAlertDialogBodyTextStyle">@style/MaterialAlertDialog.MaterialComponents.Body.Text</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.Alert.Button.Positive</item>
        <item name="buttonBarNegativeButtonStyle">@style/Widget.Alert.Button.Negative</item>
    </style>

    <!-- Material Alert Dialog Shape -->
    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.MaterialComponents">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
    </style>

    <!-- Material Alert Dialog Panel -->
    <style name="MaterialAlertDialog.MaterialComponents.Title.Panel2" parent="MaterialAlertDialog.MaterialComponents.Title.Panel">
        <item name="android:background">@color/primaryColor</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingTop">?attr/dialogPreferredPadding</item>
    </style>

    <!-- Material Alert Dialog Icon -->
    <style name="MaterialAlertDialog.App.Title.Icon" parent="MaterialAlertDialog.MaterialComponents.Title.Icon.CenterStacked">
        <item name="android:tint">@color/white</item>
    </style>

    <!-- Material Alert Dialog Title -->
    <style name="MaterialAlertDialog.App.Title.Text"
           parent="MaterialAlertDialog.MaterialComponents.Title.Text.CenterStacked">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">10dp</item>
<!--        <item name="fontFamily">@font/notosansregular</item>-->
    </style>

    <!-- Material Alert Dialog Body -->
    <style name="MaterialAlertDialog.MaterialComponents.Body.Text" parent="MaterialAlertDialog.MaterialComponents">
<!--        <item name="android:textColor">@color/font_color_1</item>-->
        <item name="android:textSize">16sp</item>
        <item name="android:textAlignment">center</item>
<!--        <item name="fontFamily">@font/notosansregular</item>-->
        <item name="android:lineSpacingExtra">10dp</item>
        <item name="android:padding">12dp</item>
    </style>

    <!-- Material Alert Dialog Shape - medium -->
    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

    <!-- Material Alert Dialog Shape - small -->
    <style name="ShapeAppearance.App.SmallComponent" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <!--<item name="cornerSize">16dp</item>-->
    </style>

    <!-- Material Alert Dialog Positive btn shape -->
    <style name="Widget.Alert.Button.Positive" parent="Widget.MaterialComponents.Button.UnelevatedButton">
<!--        <item name="android:fillColor">@color/primaryColor</item>-->
<!--        <item name="android:textColor">?android:colorBackground</item>-->
<!--        <item name="android:textAllCaps">false</item>-->
<!--        <item name="android:textSize">14sp</item>-->
<!--        <item name="rippleColor">@color/white</item>-->
<!--        <item name="colorPrimary">@color/primaryDarkColor</item>-->
<!--        <item name="colorOnSurface">@color/primaryLightColor</item>-->
    </style>

    <!-- Material Alert Dialog Negative btn shape -->
    <style name="Widget.Alert.Button.Negative" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/primaryDarkColor</item>
        <item name="android:textColor">@color/primaryLightColor</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="rippleColor">@color/white</item>
    </style>

</resources>