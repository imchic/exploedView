<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Toolbar -->
    <style name="Widget.Toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="android:background">?attr/colorOnPrimary</item>
        <item name="titleTextColor">?android:attr/textColorPrimary</item>
        <item name="titleTextAppearance">@style/TextAppearance.ToolbarTitle</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>

    <style name="TextAppearance.ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="fontFamily">@font/nsquarebold</item>
    </style>

    <style name="MaterialAlertDialog.App" parent="MaterialAlertDialog.Material3">
        <item name="shapeAppearance">@style/ShapeAppearance.App.MediumComponent</item>
        <item name="shapeAppearanceOverlay">@null</item>
    </style>

    <style name="MaterialAlertDialog.MaterialComponents.Title.Panel2"
           parent="MaterialAlertDialog.Material3.Title.Panel.CenterStacked">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="android:paddingBottom">20dp</item>
        <item name="android:paddingTop">?attr/dialogPreferredPadding</item>
    </style>

    <style name="MaterialAlertDialog.App.Title.Icon" parent="MaterialAlertDialog.Material3.Title.Icon.CenterStacked">
        <item name="android:tint">?attr/colorOnPrimary</item>
    </style>

    <style name="MaterialAlertDialog.App.Title.Text" parent="MaterialAlertDialog.Material3.Title.Text.CenterStacked">
        <item name="fontFamily">@font/notosansbold</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="MaterialAlertDialog.MaterialComponents.Body.Text"
           parent="MaterialAlertDialog.Material3.Body.Text.CenterStacked">
        <item name="fontFamily">@font/notosansmedium</item>
        <item name="lineHeight">30sp</item>
    </style>

    <style name="Widget.App.Button" parent="Widget.Material3.Button.TextButton.Dialog">
    </style>

    <style name="ShapeAppearance.App.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8dp</item>
    </style>

</resources>